#!/usr/bin/env bash
#
# Torque - Minimal tui for transmission-daemon.

clear_screen() {
    printf '\e[?7l\e[?25l\e[2J\e[2;H'
}

get_term_size() {
    read -r LINES COLUMNS < <(stty size); ((max=(LINES-3)/3))
}

status() {
    printf '\e[%s;H%s\e[m\n' "$((LINES-1))" "$1"
}

get_torrents() {
    IFS=$'\n' read -d "" -ra t < <(transmission-remote -l)
    unset 't[0]' 't[-1]' 2>/dev/null
    printf '\e[;1H'

    t=("${t[@]//[0-9][0-9] [a-z][a-z][a-z]/.}")
    t=("${t[@]//[0-9] [a-z][a-z][a-z]?/.}")
    t=("${t[@]//Up & Down/Downloading}")
    t=("${t[@]//     None/0 MB}")
    t=("${t[@]//None/0.0}")
    t=("${t[@]//n\/a/0%}")

    ((max=max>${#t[@]}?${#t[@]}:max))

    for ((i=${min:=0};i<max;i++));{ print_torrent "${t[$i]}";}
    status $'\e[2m[s]tart [p]ause [r]emove [o]pen magnet [j/k] scroll \e[;H'
}

print_torrent() {
    IFS=" %" read -r num perc have unit fin up down _ stat name <<< "$1"

    [[ "$fin" == *Done* ]] && local c=$'\e[33m✓ '
    ((size=perc!=0?${have/.*}*100/perc:0))

    printf '\e[K\e[2m%s\e[m \e[1m%s%s\e[m\n' \
           "$num:" "${c:-$'\e[31m'}" "$name"
    printf '\e[K%s\e[99D\e[17C%s\e[99D\e[36C%s\e[99D\e[47C%s\n\e[K\n' \
           "   $stat: " "$have / $size $unit" "⇣ $down" "⇡ $up"
}

prompt() {
    torrent() { transmission-remote "$@" >/dev/null; }
    status $'\e[?25h'

    case "$1" in
        s) read -rp "start torrent: #";  torrent -t "$REPLY" -s ;;
        p) read -rp "pause torrent: #";  torrent -t "$REPLY" -S ;;
        r) read -rp "remove torrent: #"; torrent -t "$REPLY" -r ;;
        o) read -rp "load magnet: ";     torrent -a "$REPLY" ;;
        j) ((max==${#t[@]}))||((min=min>=max?min:++min,max=max<${#t[@]}?++max:max)) ;;
        k) ((min==0))||((min=min<=max?min>0?--min:0:max,max=max>0?--max:max)) ;;
    esac

    clear_screen
}

main() {
    clear_screen
    get_term_size
    printf '\e[0;%sr\e[?19l' "$((LINES-3))"

    trap $'printf \e[?19h\e[?25h\e[?7h\e[999B' EXIT
    trap  'clear_screen; get_term_size' SIGWINCH

    for ((;;)); { get_torrents; read -rsN1 -t1 && prompt "$REPLY"; }
}

main "$@"
